.card{
	background:@white;
	.shadow(0,0,.2rem,rgba(0,0,0,.2));
	//border:1px solid @mediumgrey;
	.transition();
	.rounded(@cornerRadius);

	&>*{
		//overflow:hidden;
		//text-overflow:unset;
	}

	:hover{
		.shadow(0,0,1rem,rgba(0,0,0,.2));
		//border:1px solid @grey;
		}
	}

