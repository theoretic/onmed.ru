#submenu{
	li{
		margin:3px 0;
		}
	a{
		display:block;
		padding:5px 10px;
		.rounded(20px);
		:hover{
			color:#fff;
			//.gradient(@yellow,lighten(@red,30%));
			.gradient(lighten(@green,10%),darken(@green,10%));
			}
		}
	a.current{
		color:#fff;
		.gradient(lighten(@grey,10%),darken(@grey,10%));
		:hover{
			cursor:default;
			}
		}
	}